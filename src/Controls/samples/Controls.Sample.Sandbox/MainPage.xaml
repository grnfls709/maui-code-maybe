<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.MainPage"
    xmlns:local="clr-namespace:Maui.Controls.Sample">
    <Grid RowDefinitions="*, Auto">
        <ScrollView Background="Red">
                <Label HorizontalOptions="Start" BackgroundColor="Green" x:Name="HelloWorld" Text="Hello, World!" FontSize="32" />
        </ScrollView>
        <Button Grid.Row="1" Clicked="Button_Clicked" Text="Change Position of Label to end."/>
    </Grid>
</ContentPage>